<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/value_five"
              android:background="@color/transparent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/value_fifty"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/value_ten">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                    android:id="@+id/rLayout_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_fifteen">

                <TextView
                        android:id="@+id/textView_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/text_alert"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_xxxlarge"
                        android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rLayout_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_ten"
                    android:layout_marginTop="@dimen/value_ten"
                    android:layout_marginEnd="@dimen/value_ten"
                    android:layout_marginBottom="@dimen/value_fifteen">

                <TextView
                        android:id="@+id/textView_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/text_are_you_sure_to_logout"
                        android:textSize="@dimen/text_size_xlarge"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/gray"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_fifty"
                    android:orientation="horizontal"
                    android:weightSum="2">

                <TextView
                        android:id="@+id/textView_cancel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/text_small_cancel"
                        android:textColor="@color/light_sky_blue"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textStyle="bold"/>

                <RelativeLayout
                        android:layout_width=".5dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>

                <TextView
                        android:id="@+id/textView_ok"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/text_ok"
                        android:textColor="@color/red_color"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>