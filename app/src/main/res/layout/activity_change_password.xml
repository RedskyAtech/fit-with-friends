<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fitWithFriends.ui.activities.forgotPassword.ChangePasswordActivity">

    <RelativeLayout
            android:id="@+id/rLayout_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_header">

        <RelativeLayout
                android:id="@+id/rLayout_back_arrow"
                android:layout_width="@dimen/value_forty"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="@dimen/value_twenty"
                    android:layout_height="@dimen/value_twenty"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/back_white_arrow"/>

        </RelativeLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/text_new_password"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_xxxlarge"/>

    </RelativeLayout>


    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rLayout_header">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                    android:id="@+id/rLayout_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_forty">

                <ImageView
                        android:layout_width="@dimen/value_image_size"
                        android:layout_height="@dimen/value_image_size"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/logo_white_fwf"/>

            </RelativeLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_twenty"
                    android:layout_marginEnd="@dimen/value_twenty"
                    android:textSize="@dimen/text_size_xxxlarge"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/text_please_enter_your_new_password"
                    android:layout_marginTop="@dimen/value_forty"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_forty"
                    android:layout_marginStart="@dimen/value_twenty"
                    android:layout_marginEnd="@dimen/value_twenty"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UselessLeaf">

                <LinearLayout
                        android:id="@+id/layout_upper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/value_header"
                            android:layout_margin="@dimen/value_five">

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:ignore="UselessParent">

                            <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginStart="@dimen/value_ten"
                                    android:layout_height="match_parent"
                                    android:hint="@string/text_new_password"
                                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                    android:textColorHint="@color/gray">

                                <EditText
                                        android:id="@+id/editText_new_password"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@null"
                                        android:inputType="textPassword"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_size_xlarge"
                                        tools:ignore="Autofill,LabelFor"/>

                            </android.support.design.widget.TextInputLayout>

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/white"/>

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/value_header"
                            android:layout_margin="@dimen/value_five">

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:ignore="UselessParent">

                            <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginStart="@dimen/value_ten"
                                    android:layout_height="match_parent"
                                    android:hint="@string/text_confirm_password"
                                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                    android:textColorHint="@color/gray">

                                <EditText
                                        android:id="@+id/editText_confirm_password"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@null"
                                        android:inputType="textPassword"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_size_xlarge"
                                        tools:ignore="Autofill,LabelFor"/>

                            </android.support.design.widget.TextInputLayout>

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/white"/>

                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>


                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_sixty">

                    <ImageView
                            android:id="@+id/imageView_btn_submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/app_name"
                            android:src="@mipmap/sign_in_btn"/>

                    <TextView
                            android:id="@+id/textView_continue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/text_submit"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:visibility="visible"
                            android:textSize="@dimen/text_size_xxlarge"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>